{
  "name": "sol-yaml",
  "scopeName": "source.sop.yaml",
  "scopeNameComment": "Syntax highlighting for Semantic Operations Language YAML (.sop.yaml/.sop.yml) files",
  "patterns": [
    {
      "include": "source.yaml"
    },
    {
      "include": "#sol-yaml-specifics"
    }
  ],
  "repository": {
    "sol-yaml-specifics": {
      "patterns": [
        {
          "match": "\\b(Vision|Domain|Concept|Policy|Process|Actor|Indicator|Result|Signal|Observation|Authority|Protocol)(?=:)",
          "name": "keyword.control.sop.artifact.yaml"
        },
        {
          "match": "\\b(id|content|description|steps|actors|type|vision|premise|measurement|unit|goal|issuedBy|reason|timestamp|author|date|language|tags|capabilities|domain|indicators|policies|processes)(?=:)",
          "name": "variable.parameter.sop.yaml"
        },
        {
          "match": "\\b([A-Z][a-zA-Z0-9_]*[a-zA-Z0-9])\\b",
          "name": "constant.language.sop.identifier.yaml"
        },
        {
          "match": "\\((Policy|Process|Actor|Vision|Domain):\\s*([A-Z][a-zA-Z0-9_]*)\\)",
          "captures": {
            "1": {
              "name": "keyword.control.sop.artifact.yaml"
            },
            "2": {
              "name": "entity.name.function.sop.reference.yaml"
            }
          }
        }
      ]
    }
  }
} 