Vision:
  id: LiderazgoTecnologicoSustentable
  
  # Bloques fundacionales
  intent:
    statement: >
      Ser el proveedor líder en soluciones tecnológicas sustentables en LATAM,
      transformando la industria a través de innovación responsable y 
      compromiso ambiental
    mode: declare
    priority: critical
  
  context:
    scope: Mercado latinoamericano de tecnología
    timeframe: largo-plazo (5-10 años)
    stakeholders:
      - Clientes corporativos
      - Inversionistas
      - Empleados
      - Comunidades locales
      - Reguladores ambientales
    conditions:
      - mercado-tecnologico-en-crecimiento
      - regulaciones-ambientales-estrictas
      - demanda-creciente-sustentabilidad
      - talento-especializado-disponible
  
  authority:
    actor: Consejo Directivo
    basedOn: Plan Estratégico 2025-2030
    validFrom: 2025-01-01
    validUntil: 2030-12-31
    level: strategic
  
  evaluation:
    expected: posicionamiento como líder reconocido en tecnología sustentable
    method: evaluación anual de indicadores estratégicos
    criteria:
      - metric: participacion-mercado-latam
        threshold: "> 25%"
      - metric: indice-sustentabilidad-corporativa
        threshold: "> 90/100"
      - metric: reconocimiento-marca-verde
        threshold: "top-3 en rankings"
      - metric: crecimiento-ingresos-anuales
        threshold: "> 15%"
    frequency: anual
  
  # Campos de soporte
  area: EstrategiaEmpresarial
  tags: [liderazgo, tecnologia, sustentabilidad, latam]
  
  # Visiones relacionadas
  relatedVisions: [InnovacionResponsable, ExcelenciaOperacional]
  
  # Impacto esperado
  businessImpact:
    - liderazgo-mercado-regional
    - diferenciacion-competitiva-sustentable
    - atraccion-talento-comprometido
    - acceso-capital-verde
    - expansion-mercados-emergentes 