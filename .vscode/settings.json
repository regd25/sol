{
    "files.associations": {
        "*.sop": "sol-yaml"
    },
    "[sol-yaml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.wordWrap": "on"
    },
    "workbench.colorTheme": "SOL Synth84",
    "editor.semanticHighlighting.enabled": true,
    "editor.semanticTokenColorCustomizations": {
        "[SOL Synth84]": {
            "enabled": true,
            "rules": {
                "property": "#FF6B9D",
                "keyword": "#45A9F9", 
                "string": "#6BCF7F",
                "comment": "#7C7C7C"
            }
        }
    }
}
